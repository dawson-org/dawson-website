@import 'nib'
@import 'rupture'
@import url('//fonts.googleapis.com/css?family=Inconsolata|Source+Sans+Pro:200,300,400');

$orange = #f8b133
$darkorange = #f88933

.sans
  font-family 'Source Sans Pro', sans-serif
.monospace
  font-family 'Inconsolata', monospace

_spacer = 5, 10, 20, 30, 40, 50, 60, 80, 100
for _s in _spacer
  .spacer-{ _s }
    height ( _s * 1px )

html,
body
  height 100%
  @extends .sans
  font-weight 300
  
h1
  font-weight 200
h2,
h3
  font-weight 300
h4,
h5,
h6
  font-weight 400

strong
  font-weight 400

a
  color $darkorange
  
img
  display block
  margin 0 auto
  max-width 100%
  height auto
  
hr
  border none
  height 1px
  background #ccc
  
.padding
  padding 10px

.container
  margin 0 auto

nav
  .container
    width 960px
    max-width 100%
  a
    box-shadow none
    text-shadow none
    img
      display inline-block
      height 35px
      width auto

// -- terminal window from: https://codepen.io/simoami/pen/zstvo
.terminal-window
  text-align left
  width 600px
  height 360px
  border-radius 10px
  margin auto
  position relative
  header
    background #E0E8F0
    height 30px
    border-radius 8px 8px 0 0
    padding-left 10px
    .button
      width 12px
      height 12px
      margin 10px 4px 0 0
      display inline-block
      border-radius 8px
      &.green
        background #3BB662
      &.yellow
        background #E5C30F
      &.red
        background #E75448

  section.terminal
    @extends .monospace
    color white
    font-size 1em
    line-height 22px
    background #30353A
    padding 10px
    box-sizing border-box
    position absolute
    width 100%
    top 30px
    bottom 0
    overflow auto



#top
  background linear-gradient(top, $darkorange, $orange)
  color #fff
  height 90%
  position relative
  .container
    position absolute
    text-align center
    top 50%
    left 50%
    transform translate(-50%, -50%)
  img.logo
    display block
    height 70px
    width auto
    margin 0 auto

#preview,
#readme
  .container
    width 960px
    max-width 100%

#readme
  h1
    position relative
    color $darkorange
    &:before
      content '\039B'
      color rgba($darkorange, 0.7)
      font-size 0.6em
      position absolute
      left -20px
      bottom .25em
  h2
    position relative
    color $orange
    &:before
      content '\03BB'
      color rgba($orange, 0.7)
      font-size 0.6em
      position absolute
      left -20px
      bottom .25em
      
  blockquote
    border-left 4px solid #ddd
    color #bbb
    padding-left 20px
    margin 0